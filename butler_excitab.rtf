\par \pard\plain \s16\ql\widctlpar\sb0\sa232\ltrpar\cf0\hich\af8\langfe255\dbch\af12\afs24\loch\f4\fs24\lang255\sl360\slmult1\sb0\sa232{\cf1\i0\b0\hich\af10\langfe255\dbch\af12\afs24\alang1025\rtlch \ltrch\loch\fs24\lang255
